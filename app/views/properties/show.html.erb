<p id="notice"><%= notice %></p>

<h1>閲覧</h1>
<p>
  <strong>物件名:</strong>
  <%= @property.name %>
</p>

<p>
  <strong>賃料:</strong>
  <%= @property.rent %>
</p>

<p>
  <strong>住所:</strong>
  <%= @property.address %>
</p>

<p>
  <strong>築年数</strong>
  <%= @property.age %>
</p>

<p>
  <strong>備考</strong>
  <%= @property.detail %>
</p>

<% number = 0 %>
<% @property.nearest_stations.each do |n| %>
  <h2>最寄り駅<%= number += 1 %></h2>

  <p>路線名 <%= n.line_name %></p>

  <p>駅名 <%= n.station_name %></p>

  <p>徒歩分数 <%= n.walking_minutes %></p>
<% end %>


